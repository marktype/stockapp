<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@mipmap/wallhaven"
    >

    <RelativeLayout
        android:id="@+id/login_title"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="@dimen/title_height">
        <ImageView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/arrowlift"
            android:padding="@dimen/margin_10dp"/>
        <TextView
            android:id="@+id/back_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/login_txt"
            android:gravity="center"
            android:textColor="@color/write_color"
            android:layout_centerInParent="true"
            android:padding="@dimen/margin_10dp"
            android:textSize="@dimen/title_text_size"/>
        <TextView
            android:id="@+id/register_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/register_txt"
            android:gravity="center"
            android:textColor="@color/write_color"
            android:layout_alignParentRight="true"
            android:padding="@dimen/margin_10dp"
            android:textSize="@dimen/title_text_size"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/head_image"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login_title"
        android:layout_marginTop="@dimen/margin_40dp"
        android:src="@mipmap/user"
        android:layout_width="@dimen/margin_100dp"
        android:layout_height="@dimen/margin_100dp" />
    <EditText
        android:id="@+id/user_name_txt"
        android:layout_below="@id/head_image"
        android:hint="用户名"
        android:background="@drawable/rect_write_black_shape"
        android:padding="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginLeft="@dimen/margin_25dp"
        android:layout_marginRight="@dimen/margin_25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/password_txt"
        android:layout_below="@id/user_name_txt"
        android:hint="密码"
        android:background="@drawable/rect_write_black_shape"
        android:padding="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginLeft="@dimen/margin_25dp"
        android:layout_marginRight="@dimen/margin_25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/login_txt"
        android:text="@string/login_txt"
        android:layout_below="@id/password_txt"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@drawable/rect_blue_shape"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/title_text_size"
        android:layout_marginLeft="@dimen/margin_25dp"
        android:layout_marginRight="@dimen/margin_25dp"
        android:padding="@dimen/margin_10dp"
        android:textColor="@color/write_color"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/forget_password_txt"
        android:text="@string/forget_password_txt"
        android:layout_below="@id/login_txt"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/title_text_size"
        android:layout_marginTop="@dimen/margin_10dp"
        android:padding="@dimen/margin_15dp"
        android:textColor="@color/write_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
