<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/jingxuan_class_img"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jingxuan_class_img"
        android:text="标题"
        android:layout_margin="@dimen/margin_10dp"
        android:textSize="@dimen/title_text_size"
        android:id="@+id/title_name"/>
    <TextView
        android:layout_below="@id/title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:drawableLeft="@mipmap/zhuanfa"
        android:drawablePadding="@dimen/margin_10dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:id="@+id/dingzhi_num"/>
    <TextView
        android:layout_below="@id/title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/dingzhi_num"
        android:text="30"
        android:drawableLeft="@mipmap/pinglun"
        android:drawablePadding="@dimen/margin_10dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:id="@+id/pinglun_num"/>

</RelativeLayout>
