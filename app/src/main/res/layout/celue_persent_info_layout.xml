<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/holo_orange_dark"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/guanzhu_num"
        android:text="关注人数 12354"
        android:textColor="@color/write_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10dp"/>
    <TextView
        android:id="@+id/build_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建时间 2016.06.20"
        android:layout_toRightOf="@id/guanzhu_num"
        android:layout_margin="@dimen/margin_10dp"
        android:textColor="@color/write_color"/>
    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="平稳增长"
        android:textColor="@android:color/secondary_text_dark"
        android:textSize="@dimen/title_size"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_below="@id/guanzhu_num"/>
    <RelativeLayout
        android:layout_below="@id/txt_name"
        android:layout_width="match_parent"
        android:id="@+id/relate_layout"
        android:layout_margin="@dimen/margin_10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title_one_name"
            android:text="日"
            android:textColor="@color/write_color"
            android:layout_margin="@dimen/margin_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/jingzhi_num"
            android:text="0.45%"
            android:textColor="@color/write_color"
            android:layout_below="@id/title_one_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/line_item"
            android:layout_width="1px"
            android:layout_height="@dimen/margin_50dp"
            android:layout_toRightOf="@id/jingzhi_num"
            android:layout_margin="@dimen/margin_5dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/title_two_name"
            android:text="月"
            android:textColor="@color/write_color"
            android:layout_toRightOf="@id/line_item"
           android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginLeft="@dimen/title_text_size"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/max_num"
            android:text="2.45%"
            android:textColor="@color/write_color"
            android:layout_below="@id/title_two_name"
            android:layout_toRightOf="@id/line_item"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/line_item_two"
            android:layout_width="1px"
            android:layout_height="@dimen/margin_50dp"
            android:layout_toRightOf="@id/max_num"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/margin_5dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/title_three_name"
            android:text="净值"
            android:textColor="@color/write_color"
            android:layout_toRightOf="@id/line_item_two"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginLeft="@dimen/title_text_size"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/rate_num"
            android:text="3.2155"
            android:textColor="@color/write_color"
            android:layout_below="@id/title_three_name"
            android:layout_toRightOf="@id/line_item_two"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/persent_num"
        android:text="221.55%"
        android:textSize="@dimen/margin_60dp"
        android:layout_below="@id/relate_layout"
        android:layout_width="wrap_content"
        android:textColor="@color/write_color"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_height="wrap_content" />
    <TextView
        android:text="总收益"
        android:layout_alignBaseline="@id/persent_num"
        android:layout_toRightOf="@id/persent_num"
        android:textColor="@color/write_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/changjianwenti_txt"
        android:src="@mipmap/changjianwenti"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/margin_25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
