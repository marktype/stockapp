<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/write_color"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/diaocang_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_dark"
        android:textSize="@dimen/activity_horizontal_margin"
        android:layout_margin="@dimen/margin_10dp"
        android:text="最新调仓"
        />
    <TextView
        android:id="@+id/diaocang_time_txt"
        android:layout_alignBaseline="@id/diaocang_txt"
        android:layout_toRightOf="@id/diaocang_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(2016-06-20 10:30:23)"
        />
    <TextView
        android:id="@+id/line_diaocang"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/diaocang_txt"/>

    <ImageView
        android:id="@+id/dioacang_image"
        android:layout_width="@dimen/margin_40dp"
        android:layout_height="@dimen/margin_40dp"
        android:layout_margin="@dimen/margin_10dp"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@id/line_diaocang"/>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/diaocang_name"
        android:text="大秦铁路"
        android:textColor="@android:color/background_dark"
        android:layout_below="@id/line_diaocang"
        android:layout_toRightOf="@id/dioacang_image"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginBottom="@dimen/margin_5dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/diaocang_num"
        android:text="SH601006"
        android:layout_below="@id/diaocang_name"
        android:layout_toRightOf="@id/dioacang_image"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:textColor="@android:color/darker_gray"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/price_num"
        android:text="0.91 → 7.00"
        android:layout_below="@id/line_diaocang"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/background_dark"
        android:layout_alignBaseline="@id/diaocang_name"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/price_start"
        android:text="参考成交价6.33"
        android:layout_below="@id/diaocang_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_10dp"
        android:textColor="@android:color/darker_gray"
        android:layout_height="wrap_content" />

</RelativeLayout>
