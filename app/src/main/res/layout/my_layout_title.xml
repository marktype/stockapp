<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@mipmap/userbg"
        android:layout_height="250dp">
        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="我的"-->

            <!--android:textColor="@android:color/background_dark"-->
            <!--android:layout_marginTop="@dimen/margin_30dp"-->
            <!--android:textSize="@dimen/content_text_size"-->
            <!--android:layout_centerHorizontal="true"/>-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_head"
            android:layout_width="@dimen/margin_60dp"
            android:layout_height="@dimen/margin_60dp"
            android:layout_centerInParent="true"
            app:civ_border_color="@color/write_color"
            app:civ_border_width="@dimen/margin_1dp"
            />
        <TextView
            android:id="@+id/user_name"
            android:layout_below="@id/user_head"
            android:text="用户名"
            android:textColor="@android:color/background_dark"
            android:layout_marginTop="@dimen/margin_15dp"
            android:layout_centerHorizontal="true"
            android:drawableRight="@mipmap/man"
            android:drawablePadding="@dimen/margin_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:padding="@dimen/margin_20dp"
        android:background="@color/write_color"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/layout_selector"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fensi_num_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="152"
                android:textColor="@android:color/background_dark"
                android:textSize="@dimen/title_size"
                android:layout_weight="1"/>
            <TextView
                android:text="粉丝"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/attention_lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/layout_selector"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="134"
                android:id="@+id/foucs_txt"
                android:textColor="@android:color/background_dark"
                android:textSize="@dimen/title_size"
                android:layout_weight="1"/>
            <TextView
                android:text="关注"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/collect_lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/layout_selector"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="36"
                android:id="@+id/collect_num_txt"
                android:textColor="@android:color/background_dark"
                android:textSize="@dimen/title_size"
                android:layout_weight="1"/>
            <TextView
                android:text="收藏"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
