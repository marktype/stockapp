<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/advice_can_title"
        android:layout_width="match_parent"
        android:background="@color/write_color"
        android:layout_height="@dimen/title_height">
        <ImageView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/arrowlift"
            android:padding="@dimen/margin_10dp"/>
        <TextView
            android:id="@+id/back_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="用户反馈"
            android:gravity="center"
            android:textColor="@android:color/background_dark"
            android:layout_centerInParent="true"
            android:padding="@dimen/margin_10dp"
            android:textSize="@dimen/title_text_size"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_text_size"
        android:layout_below="@id/advice_can_title"
        style="@style/MyContentStyle"
        android:padding="@dimen/margin_10dp"
        android:background="@color/write_color"
        android:textColorHint="@color/quan_off_txt"
        android:hint="留下您的姓名吧"/>

    <EditText
        android:id="@+id/phone_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_text_size"
        android:layout_below="@id/name_txt"
        style="@style/MyContentStyle"
        android:padding="@dimen/margin_10dp"
        android:background="@color/write_color"
        android:textColorHint="@color/quan_off_txt"
        android:hint="留下您的电话吧"/>
    <!--<EditText-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textSize="@dimen/title_text_size"-->
        <!--android:layout_below="@id/phone_text"-->
        <!--style="@style/MyContentStyle"-->
        <!--android:padding="@dimen/margin_10dp"-->
        <!--android:background="@color/write_color"-->
        <!--android:textColorHint="@color/quan_off_txt"-->
        <!--android:hint="留下您的建议吧"/>-->
    <EditText
        android:id="@+id/edit_txt"
        android:hint="留下您的建议吧"
        android:textColorHint="@color/quan_off_txt"
        android:layout_width="match_parent"
        style="@style/MyContentStyle"
        android:textCursorDrawable="@null"
        android:gravity="top"
        android:layout_below="@id/phone_text"
        android:textSize="@dimen/title_text_size"
        android:padding="@dimen/margin_10dp"
        android:background="@color/write_color"
        android:layout_height="250dp" />

    <TextView
        android:id="@+id/send_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/margin_20dp"
        android:gravity="center"
        android:background="@color/content_bg"
        android:textSize="@dimen/title_text_size"
        android:textColor="@android:color/background_dark"
        android:text="提交"/>
</RelativeLayout>
