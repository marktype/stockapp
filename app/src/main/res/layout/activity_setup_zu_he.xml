<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
    <RelativeLayout
        android:id="@+id/setup_title"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="@dimen/title_height">
        <ImageView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/arrowlift"
            android:padding="@dimen/margin_10dp"/>
        <TextView
            android:id="@+id/back_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/set_up_txt"
            android:gravity="center"
            android:textColor="@color/write_color"
            android:layout_centerInParent="true"
            android:padding="@dimen/margin_10dp"
            android:textSize="@dimen/title_text_size"/>
    </RelativeLayout>

    <ScrollView
        android:layout_below="@id/setup_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <include layout="@layout/add_stock_layout"
        android:id="@+id/my_stock_layout"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/add_stock_txt"
        android:layout_below="@id/my_stock_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_10dp"
        android:padding="@dimen/margin_10dp"
        android:text="添加股票"
        android:background="@drawable/rect_blue_shape"
        android:textColor="@color/write_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/apply_celue_img"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@id/add_stock_txt"
        android:layout_margin="@dimen/margin_10dp"
        android:layout_width="@dimen/margin_40dp"
        android:layout_height="@dimen/margin_40dp" />
    <TextView
        android:id="@+id/stock_celue_name"
        android:text="运用策略："
        android:layout_below="@id/add_stock_txt"
        android:layout_marginTop="@dimen/margin_30dp"
        android:layout_toRightOf="@id/apply_celue_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/stock_spinner"
        android:layout_below="@id/stock_celue_name"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/money_scale_img"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@id/stock_spinner"
        android:layout_margin="@dimen/margin_10dp"
        android:layout_width="@dimen/margin_40dp"
        android:layout_height="@dimen/margin_40dp" />
    <TextView
        android:id="@+id/money_scale_name"
        android:text="资金规模："
        android:layout_below="@id/stock_spinner"
        android:layout_marginTop="@dimen/margin_30dp"
        android:layout_toRightOf="@id/apply_celue_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/money_total"
        android:text="50000元"
        android:layout_below="@id/money_scale_name"
        android:layout_centerHorizontal="true"

        android:background="@drawable/rect_write_black_shape"
        android:padding="@dimen/margin_5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/expect_img"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@id/money_total"
        android:layout_margin="@dimen/margin_10dp"
        android:layout_width="@dimen/margin_40dp"
        android:layout_height="@dimen/margin_40dp" />
    <TextView
        android:id="@+id/expect_name"
        android:text="预期收益（推荐20%-40%）"
        android:layout_below="@id/money_total"
        android:layout_marginTop="@dimen/margin_30dp"
        android:layout_toRightOf="@id/apply_celue_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <include layout="@layout/risk_image_layout"
        android:id="@+id/security_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/expect_name"/>
    <TextView
        android:layout_below="@id/security_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40dp" />
</RelativeLayout>
</ScrollView>

    <TextView
        android:id="@+id/setup_sure_txt"
        android:text="确认创建"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:textColor="@color/write_color"
        android:padding="@dimen/margin_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>