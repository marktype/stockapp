<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/culue_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="乐凯新材"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:textColor="@android:color/background_dark"
        android:padding="@dimen/margin_10dp"/>
    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="300466"
        android:layout_below="@id/culue_name_txt"
        android:layout_marginLeft="@dimen/margin_25dp"/>

    <ImageView
        android:id="@+id/image_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/margin_10dp"
        android:src="@mipmap/delete"/>
    <ImageView
        android:id="@+id/image_dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/image_delete"
        android:layout_centerVertical="true"
        android:src="@mipmap/dec"/>
    <TextView
        android:id="@+id/edit_txt"
        android:layout_width="@dimen/margin_50dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/image_dec"
        android:layout_centerVertical="true"
        android:text="20%"
        android:padding="@dimen/margin_3dp"
        android:gravity="center"
        android:background="@color/gray_con_bg"/>
    <ImageView
        android:id="@+id/image_add"
        android:layout_toLeftOf="@id/edit_txt"
        android:src="@mipmap/add"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="仓位"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/image_add"/>
</RelativeLayout>
