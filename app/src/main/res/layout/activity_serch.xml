<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >
    <RelativeLayout
        android:id="@+id/search_title"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="@dimen/title_height">
        <ImageView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/arrowlift"
            android:padding="@dimen/margin_10dp"/>
        <TextView
            android:id="@+id/back_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/search_txt"
            android:gravity="center"
            android:textColor="@color/write_color"
            android:layout_centerInParent="true"
            android:padding="@dimen/margin_10dp"
            android:textSize="@dimen/title_text_size"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/search_txt"
        android:layout_below="@id/search_title"
        android:layout_width="wrap_content"
        android:text="搜索"
        android:layout_marginTop="@dimen/margin_10dp"
       android:layout_marginRight="@dimen/margin_10dp"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content" />
    <EditText
        android:drawableLeft="@mipmap/searchicon"
        android:drawablePadding="@dimen/margin_10dp"
        android:padding="@dimen/margin_5dp"
        android:hint="搜索"
        android:layout_margin="@dimen/margin_5dp"
        android:layout_toLeftOf="@id/search_txt"
        android:layout_below="@id/search_title"
        android:layout_width="match_parent"
        android:alpha="0.8"
        android:background="@drawable/rect_edit_bg_shape"
        android:layout_height="wrap_content" />
</RelativeLayout>
