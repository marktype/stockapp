<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/dioacang_image"
        android:layout_width="@dimen/margin_40dp"
        android:layout_height="@dimen/margin_40dp"
        android:layout_margin="@dimen/margin_10dp"
        android:src="@mipmap/ic_launcher" />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/diaocang_name"
        android:text="大秦铁路"
        android:textColor="@android:color/background_dark"
        android:layout_below="@id/line_diaocang"
        android:layout_toRightOf="@id/dioacang_image"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginBottom="@dimen/margin_5dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/diaocang_num"
        android:text="SH601006"
        android:layout_below="@id/diaocang_name"
        android:layout_toRightOf="@id/dioacang_image"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:textColor="@android:color/darker_gray"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/price_num"
        android:text="0.91 → 7.00"
        android:layout_below="@id/line_diaocang"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/background_dark"
        android:layout_alignBaseline="@id/diaocang_name"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/price_start"
        android:text="参考成交价6.33"
        android:layout_below="@id/diaocang_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_10dp"
        android:textColor="@android:color/darker_gray"
        android:layout_height="wrap_content" />
</RelativeLayout>
