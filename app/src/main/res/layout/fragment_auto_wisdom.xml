<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.drawer.stockapp.fragment.FirstNewsFragment">
    <android.support.v4.view.ViewPager
        android:id="@+id/wisdom_content_pager"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/all_title"
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:layout_height="@dimen/title_height">
        <ImageView
            android:id="@+id/wisdom_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:src="@mipmap/message_white"/>
        <RadioGroup
            android:id="@+id/wisdom_group"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:padding="@dimen/margin_1dp"
            android:orientation="horizontal"

            android:gravity="center_vertical">
            <RadioButton
                android:id="@+id/celue_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:padding="@dimen/margin_4dp"
                android:text="@string/lianghuacelue_txt"
                android:checked="true"
                android:textColor="@drawable/text_white_selector"
                android:background="@drawable/title_bg_selecter"
                android:textSize="@dimen/title_text_size" />
            <RadioButton
                android:id="@+id/zuhe_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:padding="@dimen/margin_4dp"
                android:text="@string/niurenzuhe_txt"
                android:textColor="@drawable/text_white_selector"
                android:background="@drawable/title_bg_selecter"
                android:textSize="@dimen/title_text_size" />
            <RadioButton
                android:id="@+id/my_zuhe_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:padding="@dimen/margin_4dp"
                android:text="@string/my_zuhe_txt"
                android:textColor="@drawable/text_white_selector"
                android:background="@drawable/title_bg_selecter"
                android:textSize="@dimen/title_text_size" />
        </RadioGroup>
        <ImageView
            android:id="@+id/pop_item_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/search_white"
            android:padding="@dimen/margin_10dp" />
    </RelativeLayout>



</RelativeLayout>
