<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/zuhe_circle"
        android:orientation="vertical"
        android:layout_below="@id/line_celue"
        android:background="@drawable/circle_red_shape"
        android:layout_margin="@dimen/margin_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/zuhe_persent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+13.5%"
            android:textColor="@color/write_color"
            android:layout_marginTop="@dimen/title_size"
            android:textSize="@dimen/title_text_size"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总收益"
            android:textColor="@color/write_color"
            android:layout_marginTop="@dimen/margin_5dp"
            android:textSize="@dimen/margin_13dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/stock_name"
        android:text="沪深"
        android:textColor="@color/write_color"
        android:background="@color/colorPrimary"
        android:layout_toRightOf="@id/zuhe_circle"
        android:layout_marginTop="@dimen/margin_15dp"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:padding="@dimen/margin_3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/jiqi_name"
        android:text="赚钱初号机"
        android:layout_toRightOf="@id/zuhe_circle"
        android:padding="@dimen/margin_8dp"
        android:textSize="@dimen/margin_15dp"
        android:textColor="@android:color/background_dark"
        android:layout_below="@id/stock_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/guanzhu_name"
        android:text="2人 关注"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:layout_toRightOf="@id/zuhe_circle"
        android:layout_below="@id/jiqi_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/share_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/margin_10dp"
        android:src="@mipmap/zhuanfa"/>
</RelativeLayout>
