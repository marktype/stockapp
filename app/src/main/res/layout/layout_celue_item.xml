<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/title_one_name"
        android:text="目标收益"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/jingzhi_num"
        android:text="12%"
        android:layout_below="@id/title_one_name"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/line_item"
        android:layout_width="1px"
        android:layout_height="@dimen/margin_50dp"
        android:layout_toRightOf="@id/title_one_name"
        android:layout_margin="@dimen/margin_5dp"
        android:background="@android:color/darker_gray"/>
    <TextView
        android:id="@+id/title_two_name"
        android:text="最长期限"
        android:layout_toRightOf="@id/line_item"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/max_num"
        android:text="30"
        android:layout_below="@id/title_two_name"
        android:layout_toRightOf="@id/line_item"
        android:layout_marginLeft="@dimen/title_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/line_item_two"
        android:layout_width="1px"
        android:layout_height="@dimen/margin_50dp"
        android:layout_toRightOf="@id/title_two_name"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin_5dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/title_three_name"
        android:text="分成比例"
        android:layout_toRightOf="@id/line_item_two"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/rate_num"
        android:text="20.18%"
        android:layout_below="@id/title_three_name"
        android:layout_toRightOf="@id/line_item_two"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/line_item_three"
        android:layout_width="1px"
        android:layout_height="@dimen/margin_50dp"
        android:layout_toRightOf="@id/title_three_name"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin_5dp"
        android:background="@android:color/darker_gray"/>
    <TextView
        android:id="@+id/gengtou_min"
        android:text="最低跟投"
        android:layout_toRightOf="@id/line_item_three"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/gengtou_num"
        android:text="10000"
        android:layout_below="@id/title_three_name"
        android:layout_toRightOf="@id/line_item_three"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
