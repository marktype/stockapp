<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >
    <RelativeLayout
        android:id="@+id/forget_title"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="@dimen/title_height">
        <ImageView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/arrowlift"
            android:padding="@dimen/margin_10dp"/>
        <TextView
            android:id="@+id/back_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/forget_password_txt"
            android:gravity="center"
            android:textColor="@color/write_color"
            android:layout_centerInParent="true"
            android:padding="@dimen/margin_10dp"
            android:textSize="@dimen/title_size"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/head_image"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/forget_title"
        android:layout_marginTop="@dimen/margin_40dp"
        android:src="@mipmap/ic_launcher"
        android:layout_width="@dimen/margin_100dp"
        android:layout_height="@dimen/margin_100dp" />

    <EditText
        android:id="@+id/user_name_txt"
        android:layout_below="@id/head_image"
        android:hint="手机号"
        android:background="@drawable/rect_write_black_shape"
        android:padding="@dimen/margin_10dp"
        android:layout_marginLeft="@dimen/margin_25dp"
        android:layout_marginRight="@dimen/margin_25dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/lin_verify"
        android:layout_below="@id/user_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginLeft="@dimen/margin_25dp"
        android:layout_marginRight="@dimen/margin_25dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/verify_txt"
            android:hint="验证码"
            android:layout_weight="1"
            android:background="@drawable/rect_write_black_shape"
            android:padding="@dimen/margin_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/get_verify"
            android:text="获取验证码"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <EditText
        android:id="@+id/password_txt"
        android:layout_below="@id/lin_verify"
        android:hint="新密码"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginLeft="@dimen/margin_25dp"
        android:layout_marginRight="@dimen/margin_25dp"
        android:layout_width="match_parent"
        android:background="@drawable/rect_write_black_shape"
        android:padding="@dimen/margin_10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/alter_sure_txt"
        android:text="@string/sure_txt"
        android:layout_below="@id/password_txt"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/margin_15dp"
        android:background="@drawable/rect_blue_shape"
        android:textColor="@color/write_color"
        android:layout_margin="@dimen/margin_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
